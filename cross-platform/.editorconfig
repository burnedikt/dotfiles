# top-most EditorConfig file
root = true

[*]
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# different indentation settings for html
[*.html]
indent_size = 4

# different line endings for power shell scripts
[*.ps1]
end_of_line = crlf
